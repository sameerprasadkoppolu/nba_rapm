def gamelog_gameid(szn:str):
    X = leaguegamelog.LeagueGameLog(player_or_team_abbreviation = 'T', season = szn, season_type_all_star = 'Regular Season').get_data_frames()[0]
    return X, set(X['GAME_ID'])


